<% layout('/layouts/boilerplate.ejs') -%>
<div class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="card login-card shadow-lg p-3 mb-5 bg-body rounded">
    <div class="card-body">
      <h1 class="card-title text-center">Login on Wanderlust</h1>
      <form
        action="/user/login"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-success w-100">Submit</button>
      </form>
    </div>
  </div>
</div>
