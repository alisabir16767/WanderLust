<% layout('/layouts/boilerplate') -%>

<div class="container mt-4">
  <div class="row">
    <div class="col-lg-8 offset-lg-2 mb-3">
      <div class="p-3 border-bottom">
        <h3 class="text-center mb-4"><%= listing.title %></h3>

        <!-- Listing Details Card -->
        <div
          class="card mb-4 show-card listing-card mx-auto"
          style="width: 100%"
        >
          <img
            src="<%= listing.image %>"
            class="card-img-top show-img img-fluid rounded"
            alt="<%= listing.title %> Image"
          />
          <div class="card-body">
            <p class="card-text">
              <strong>Description:</strong> <%= listing.description %>
            </p>
            <p class="card-text">
              <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN")
              %>
            </p>
            <p class="card-text">
              <strong>Country:</strong> <%= listing.country %>
            </p>
            <p class="card-text">
              <strong>Location:</strong> <%= listing.location %>
            </p>
          </div>
        </div>

        <!-- Edit and Delete Buttons -->
        <div class="d-flex justify-content-between mb-4">
          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-dark edit-btn col-md-4 col-sm-12 mb-2 mb-md-0"
            >Edit</a
          >
          <form
            action="/listings/<%= listing._id %>?_method=DELETE"
            method="POST"
            class="col-md-4 col-sm-12"
          >
            <button type="submit" class="btn btn-dark del-btn w-100">
              Delete
            </button>
          </form>
        </div>

        <!-- Review Form -->
        <div class="mt-5">
          <h4 class="text-center mb-3">Leave a Review</h4>
          <hr />
          <form
            action="/listings/<%= listing._id %>/review"
            method="POST"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-slot">
                <input
                  type="radio"
                  id="rate1"
                  name="review[rating]"
                  value="1"
                />
                <label for="rate1" title="Terrible">1 star</label>
                <input
                  type="radio"
                  id="rate2"
                  name="review[rating]"
                  value="2"
                />
                <label for="rate2" title="Not good">2 stars</label>
                <input
                  type="radio"
                  id="rate3"
                  name="review[rating]"
                  value="3"
                />
                <label for="rate3" title="Average">3 stars</label>
                <input
                  type="radio"
                  id="rate4"
                  name="review[rating]"
                  value="4"
                />
                <label for="rate4" title="Very good">4 stars</label>
                <input
                  type="radio"
                  id="rate5"
                  name="review[rating]"
                  value="5"
                />
                <label for="rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea
                name="review[comment]"
                id="comment"
                cols="30"
                rows="4"
                class="form-control"
                placeholder="Write your feedback here"
                required
              ></textarea>
              <div class="invalid-feedback">Please add some feedback.</div>
            </div>
            <button type="submit" class="btn btn-outline-dark w-100">
              Submit
            </button>
          </form>
        </div>

        <!-- Reviews Section -->
        <hr class="my-4" />
        <h4 class="text-center mb-3">All Reviews</h4>
        <div class="row">
          <% if (listing.reviews.length > 0) { %> <% for (let review of
          listing.reviews) { %>
          <div class="card col-md-5 col-sm-12 mb-3 mx-2">
            <div class="card-body">
              <h5><%= review.author %></h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text">
                <strong>Rating:</strong>
                <span
                  class="starability-result"
                  data-rating="<%= review.rating %>"
                ></span>
              </p>
            </div>
            <form
              action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE"
              method="POST"
              class="mb-3"
            >
              <button type="submit" class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
          <% } %> <% } else { %>
          <p class="text-center">
            No reviews yet. Be the first to leave a review!
          </p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
