<% layout('/layouts/boilerplate.ejs') -%>

<!-- Hero Section -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center fade-in">Explore the World with Wanderlust.</h1>
      <p class="text-center slide-in">
        Find the best travel destinations, hotels, and tours worldwide.
      </p>
      <div class="text-center">
        <a href="/about" class="btn btn-primary btn-lg bounce-in">Learn More</a>
      </div>
    </div>
  </div>
</div>

<div class="mt-5"></div>

<!-- Travel Packages Section -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center fade-in">Exclusive Travel Packages</h2>
      <p class="text-center slide-in">
        Find the perfect travel package for your next adventure.
      </p>
    </div>
  </div>

  <!-- Travel Package Grid -->
  <div class="row mt-4">
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <img
          src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSxTVW7qIPLFJ_alveDA1xU-P0mGXH0CF98Fw&s"
          class="card-img-top img-fluid"
          alt="Travel Package 1"
          style="height: 200px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">Tropical Escape</h5>
          <p class="card-text">
            Escape to a tropical paradise with all-inclusive resorts and tours.
          </p>
          <p><strong>Price: $2999</strong></p>
          <a href="/listings" class="btn btn-primary mt-auto">Learn More</a>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <img
          src="https://akm-img-a-in.tosshub.com/aajtak/images/story/202406/66691948cf6a2-travelling-12430430-16x9.jpg?size=948:533"
          class="card-img-top img-fluid"
          alt="Travel Package 2"
          style="height: 200px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">Mountain Adventure</h5>
          <p class="card-text">
            Hike, explore, and unwind in the serene mountains with guided tours.
          </p>
          <p><strong>Price: $1999</strong></p>
          <a href="/listings" class="btn btn-primary mt-auto">Learn More</a>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <img
          src="https://ieltscaptoc.com.vn/wp-content/uploads/2023/02/talk-about-travelling-4.jpg"
          class="card-img-top img-fluid"
          alt="Travel Package 3"
          style="height: 200px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">City Getaway</h5>
          <p class="card-text">
            A perfect mix of sightseeing and shopping in the heart of the city.
          </p>
          <p><strong>Price: $1499</strong></p>
          <a href="/listings" class="btn btn-primary mt-auto">Learn More</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-5"></div>

<!-- Scrolling Image Marquee -->
<div class="scrolling-image overflow-hidden bg-light py-3">
  <div class="d-flex">
    <img
      src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSxTVW7qIPLFJ_alveDA1xU-P0mGXH0CF98Fw&s"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://akm-img-a-in.tosshub.com/aajtak/images/story/202406/66691948cf6a2-travelling-12430430-16x9.jpg?size=948:533"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://ieltscaptoc.com.vn/wp-content/uploads/2023/02/talk-about-travelling-4.jpg"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/2a/b5/2f/f9/hotel-travel-inn.jpg?w=700&h=-1&s=1"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://www.shutterstock.com/image-photo/young-group-tourists-suitcases-arriving-600w-2282276407.jpg"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://travel.usnews.com/static-atlas/assets/img/travel/rewards/hotels-сс.jpg"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://ychef.files.bbci.co.uk/1280x720/p0jkrxvx.jpg"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://liveworkplaytravel.com/wp-content/uploads/2023/03/HostelEtiquette.jpg"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
    <img
      src="https://www.mistay.in/travel-blog/content/images/2023/03/nomads-brisbane-hostel-dorm.jpg"
      alt="Scrolling Image"
      class="scrolling-img img-fluid mx-2"
      style="height: 150px; width: auto"
    />
  </div>
</div>

<div class="mt-5"></div>

<!-- Explore by Interests Section -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center fade-in">Explore by Interests</h2>
      <p class="text-center slide-in">Find trips tailored to your interests.</p>
    </div>
  </div>

  <!-- Interests Categories Grid -->
  <div class="row mt-4">
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <img
          src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS7ERwLstICA5O4bpHwzfrqfHk_2t3TX7-xQw&s"
          class="card-img-top img-fluid"
          alt="Adventure"
          style="height: 200px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">Adventure</h5>
          <p class="card-text">
            Explore thrilling destinations for your next adventure.
          </p>
          <a href="/listings" class="btn btn-primary mt-auto"
            >Explore Adventure</a
          >
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <img
          src="https://media.istockphoto.com/id/903417402/photo/luxury-construction-hotel-with-swimming-pool-at-sunset.jpg?s=612x612&w=0&k=20&c=NyPC_c-wE3W_CImA4t57FpyGy6f428CYROd80jxVC4A="
          class="card-img-top img-fluid"
          alt="Luxury"
          style="height: 200px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">Luxury</h5>
          <p class="card-text">
            Indulge in luxurious destinations and accommodations.
          </p>
          <a href="/listings" class="btn btn-primary mt-auto">Explore Luxury</a>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <img
          src="https://images.saymedia-content.com/.image/t_share/MTk4MDE5NTIyNzQ4MjI4NzY5/family-vacation-quotes-and-caption-ideas.png"
          class="card-img-top img-fluid"
          alt="Family"
          style="height: 200px; object-fit: cover"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">Family</h5>
          <p class="card-text">
            Family-friendly trips with activities for all ages.
          </p>
          <a href="/listings" class="btn btn-primary mt-auto">Explore Family</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Customer Testimonials Section -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center fade-in">What Our Travelers Say</h2>
      <p class="text-center slide-in">
        Real stories from Wanderlust travelers.
      </p>
    </div>
  </div>

  <!-- Testimonial Carousel -->
  <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <!-- Testimonial 1 -->
      <div class="carousel-item active">
        <div class="testimonial-card text-center p-4">
          <img
            src="https://randomuser.me/api/portraits/men/1.jpg"
            alt="Customer 1"
            class="testimonial-img rounded-circle mb-3"
            style="width: 100px; height: 100px; object-fit: cover"
          />
          <h5 class="testimonial-name">John Doe</h5>
          <p class="testimonial-text">
            "Wanderlust made my trip to the tropical islands unforgettable.
            Everything was perfectly organized from start to finish."
          </p>
        </div>
      </div>

      <!-- Testimonial 2 -->
      <div class="carousel-item">
        <div class="testimonial-card text-center p-4">
          <img
            src="https://randomuser.me/api/portraits/women/2.jpg"
            alt="Customer 2"
            class="testimonial-img rounded-circle mb-3"
            style="width: 100px; height: 100px; object-fit: cover"
          />
          <h5 class="testimonial-name">Jane Smith</h5>
          <p class="testimonial-text">
            "Our family getaway to the mountains was amazing! The adventure
            tours were well planned, and everyone had a great time."
          </p>
        </div>
      </div>

      <!-- Testimonial 3 -->
      <div class="carousel-item">
        <div class="testimonial-card text-center p-4">
          <img
            src="https://randomuser.me/api/portraits/men/3.jpg"
            alt="Customer 3"
            class="testimonial-img rounded-circle mb-3"
            style="width: 100px; height: 100px; object-fit: cover"
          />
          <h5 class="testimonial-name">Michael Johnson</h5>
          <p class="testimonial-text">
            "The luxury resorts in Italy provided the most relaxing vacation I
            could imagine. Highly recommend Wanderlust for luxury travel!"
          </p>
        </div>
      </div>
    </div>

    <!-- Carousel Controls -->
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#testimonialCarousel"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#testimonialCarousel"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
